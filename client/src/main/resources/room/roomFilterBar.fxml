<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      fx:controller="nl.tudelft.oopp.group39.room.controller.RoomSceneController" spacing="15">
    <padding>
        <Insets top="15" right="20" bottom="15" left="20"/>
    </padding>
    <Label fx:id="capacity" text="Capacity: 0"/>
    <Slider fx:id="capacityPicker"/>
    <Label text="Facilities:"/>
    <VBox fx:id="facilitiesPicker" spacing="5"/>
    <Label text="Available for:"/>
    <VBox fx:id="availabilityPicker" spacing="5"/>

    <Button fx:id="filterBtn" id="filterBtn" styleClass="buttons" text="Filter" disable="true"/>
    <Hyperlink fx:id="removeFilters" id="removeFilters"/>
</VBox>
