<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx" spacing="15">
    <padding>
        <Insets top="15" right="20" bottom="15" left="20"/>
    </padding>
    <Label fx:id="capacity" text="Max. Capacity: 0"/>
    <Slider fx:id="capacityPicker"/>
    <Label text="Opening time:"/>
    <ComboBox fx:id="timeOpenPicker"/>
    <Label text="Closing time:"/>
    <ComboBox fx:id="timeClosedPicker"/>
    <Button fx:id="filterBtn" id="filterBtn" styleClass="buttons" text="Filter" disable="true"/>
    <Hyperlink fx:id="removeFilters" id="removeFilters"/>
</VBox>