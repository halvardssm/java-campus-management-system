<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="430.0"
            minWidth="600.0"
            prefHeight="480.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="nl.tudelft.oopp.group39.controllers.RoomReservationController">
    <right>
        <AnchorPane BorderPane.alignment="CENTER">
            <children>
                <AnchorPane scaleX="1.2" scaleY="1.2" translateX="-30.0" translateY="20.0" AnchorPane.topAnchor="0.0">
                    <children>
                        <Button fx:id="reserveRoom" mnemonicParsing="false" onAction="#reserveRoom"
                                onMouseClicked="#reserveRoom" style="-fx-background-color: #00A6D6;" text="Reserve Room"
                                textFill="WHITE" translateX="30.0" translateY="255.0" AnchorPane.topAnchor="0.0">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Button>
                        <ComboBox fx:id="fromTime" prefWidth="80.0" AnchorPane.leftAnchor="1.0"
                                  AnchorPane.topAnchor="57.0"/>
                        <DatePicker fx:id="date" layoutX="-19.0" layoutY="19.0" AnchorPane.rightAnchor="10.0"/>
                        <Label id="text" stylesheets="@roomReservation.css" text="Pick a date:" translateY="22.0"
                               AnchorPane.leftAnchor="-79.0"/>
                        <Label id="text" stylesheets="@roomReservation.css" text="From:" translateX="-34.0"
                               translateY="60.0" AnchorPane.leftAnchor="-14.0"/>
                        <ComboBox fx:id="toTime" prefWidth="80.0" AnchorPane.leftAnchor="1.0"
                                  AnchorPane.topAnchor="96.0"/>
                        <Label id="text" stylesheets="@roomReservation.css" text="To:" AnchorPane.leftAnchor="-33.0"
                               AnchorPane.topAnchor="99.0"/>
                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>
    </right>
    <top>
        <AnchorPane prefHeight="50.0" prefWidth="250.0" style="-fx-background-color: #00A6D6;"
                    BorderPane.alignment="CENTER">
            <children>
                <Hyperlink id="appName" fx:id="home" stylesheets="@roomReservation.css" text="SomeName" textFill="WHITE"
                           translateX="10.0">
                    <font>
                        <Font size="25.0"/>
                    </font>
                </Hyperlink>
                <Hyperlink id="loginButton" fx:id="login" alignment="CENTER_RIGHT" stylesheets="@roomReservation.css"
                           text="Login" textFill="WHITE" translateY="4.0" AnchorPane.rightAnchor="9.0">
                    <font>
                        <Font size="22.0"/>
                    </font>
                </Hyperlink>
            </children>
        </AnchorPane>
    </top>
    <left>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <ImageView fx:id="roomImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true"
                           scaleX="1.1" scaleY="1.1" translateX="25.0" translateY="20.0">
                    <image>
                        <Image url="@testimage.jpg"/>
                    </image>
                </ImageView>
                <Label fx:id="roomName" scaleX="1.1" scaleY="1.1" text="Room Name" translateX="30.0" translateY="30.0">
                    <font>
                        <Font size="15.0"/>
                    </font>
                </Label>
                <Label fx:id="roomAddress" scaleX="1.1" scaleY="1.1" text="Address:" translateX="31.0"
                       translateY="30.0"/>
                <Label fx:id="roomCapacity" scaleX="1.1" scaleY="1.1" text="Capacity:" translateX="31.0"
                       translateY="28.0"/>
                <Label fx:id="roomFacilities" scaleX="1.1" scaleY="1.1" text="Facilities:" translateX="31.0"
                       translateY="26.0"/>
            </children>
        </VBox>
    </left>
    <bottom>
        <AnchorPane style="-fx-background-color: #00A6D6;" styleClass="bar" BorderPane.alignment="CENTER">
            <children>
                <Button id="backButton" fx:id="backButton" mnemonicParsing="false" onAction="#backToRoom"
                        stylesheets="@roomReservation.css" text="â—€ Back" translateY="-2.0" AnchorPane.leftAnchor="10.0"
                        AnchorPane.topAnchor="5.0">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Button>
            </children>
        </AnchorPane>
    </bottom>
</BorderPane>
