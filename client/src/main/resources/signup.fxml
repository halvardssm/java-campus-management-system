<BorderPane fx:controller="nl.tudelft.oopp.group39.controllers.SignupController" xmlns:fx="http://javafx.com/fxml">
    <top>
        <HBox styleClass="bar" spacing="10">
            <padding><Insets top="15" right="12" bottom="15" left="15"/></padding>
            <Text id="title" text="Some Name"/>
        </HBox>
    </top>
