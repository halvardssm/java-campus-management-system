<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="window" prefHeight="600.0" prefWidth="900.0"
            stylesheets="@../../style/style.css" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="nl.tudelft.oopp.group39.admin.user.UserCreateController">
    <top>
        <HBox spacing="10" styleClass="bar">
            <padding>
                <Insets top="10" right="15" bottom="10" left="15"/>
            </padding>
            <VBox alignment="CENTER">
                <Button onAction="#toggleSidebar" id="menubtn" alignment="CENTER">
                    <graphic>
                        <ImageView fitHeight="30" fitWidth="30">
                            <Image url="@../../icons/menu-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>
            <VBox alignment="CENTER">
                <Label id="title" text="ADMIN: Create user" alignment="BOTTOM_CENTER"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS"/>
            <VBox fx:id="userBox" alignment="CENTER">
                <Button id="loginbtn" fx:id="userButton" onAction="#goToLoginScene" text="Login"/>
            </VBox>
        </HBox>
    </top>
    <bottom>
        <HBox spacing="10" styleClass="bar">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <Button id="backbtn" fx:id="backbtn" onAction="#goToAdminUserScene" text="â—€ Back"/>
        </HBox>
    </bottom>
    <center>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <Text layoutX="14.0" layoutY="69.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Add a User" underline="true">
                <font>
                    <Font name="System Bold" size="33.0" />
                </font>
            </Text>
            <Text layoutX="27.0" layoutY="107.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Name:">
                <font>
                    <Font name="System Bold" size="17.0" />
                </font>
            </Text>
            <TextField fx:id="usernameField" layoutX="200.0" layoutY="84.0" prefHeight="31.0" prefWidth="200.0" />
            <Text layoutX="28.0" layoutY="161.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Role:">
                <font>
                    <Font name="System Bold" size="17.0" />
                </font>
            </Text>
            <ComboBox fx:id="roleBox" layoutX="200.0" layoutY="138.0" prefHeight="31.0" prefWidth="200.0" />
            <Text layoutX="28.0" layoutY="215.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Password:">
                <font>
                    <Font name="System Bold" size="17.0" />
                </font>
            </Text>
            <TextField fx:id="passwordField" layoutX="200.0" layoutY="192.0" prefHeight="31.0" prefWidth="200.0" />
            <Text layoutX="28.0" layoutY="269.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Confirm password:">
                <font>
                    <Font name="System Bold" size="17.0" />
                </font>
            </Text>
            <TextField fx:id="passwordConfirmField" layoutX="200.0" layoutY="246.0" prefHeight="31.0" prefWidth="200.0" />
            <Button layoutX="803.0" layoutY="433.0" mnemonicParsing="false" onMouseClicked="#createUser" text="Add User" />
            <TextArea fx:id="userMessage" disable="true" layoutX="443.0" layoutY="65.0" prefHeight="200.0" prefWidth="417.0" />
         <MenuBar fx:id="navBar" prefHeight="35.0" prefWidth="897.0" />
        </AnchorPane>
    </center>
</BorderPane>
