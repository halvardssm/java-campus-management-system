<BorderPane fx:id="window" prefHeight="600.0" prefWidth="900.0" style="-fx-padding: 4px;" stylesheets="@../../style/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.tudelft.oopp.group39.admin.event.EventListController">
    <top>
        <HBox prefHeight="22.0" prefWidth="892.0" spacing="10" styleClass="bar">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <VBox prefHeight="0.0" prefWidth="100.0">
                <Button id="menubtn" alignment="CENTER" onMouseClicked="#toggleAdminSidebar">
                    <graphic>
                        <ImageView fitHeight="30" fitWidth="30">
                            <Image url="@../../icons/menu-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>
            <Text id="title" text="Admin: Event View" />
        </HBox>
    </top>
    <bottom>
        <HBox spacing="10" styleClass="bar">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <Button id="backbtn" fx:id="backbtn" onAction="#switchBack" text="â—€ Back" />
        </HBox>
    </bottom>
    <center>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <Text layoutX="14.0" layoutY="58.0" strokeType="OUTSIDE" strokeWidth="0.0" text="List of Events" underline="true">
                <font>
                    <Font name="System Bold" size="33.0" />
                </font>
            </Text>
            <TableView fx:id="eventTable" layoutY="81.0" opacity="0.75" prefHeight="418.0" prefWidth="889.0">
                <columns>
                    <TableColumn fx:id="idCol" prefWidth="80.0" text="Id:" />
                    <TableColumn fx:id="typeCol" prefWidth="162.0" text="Type:" />
                    <TableColumn fx:id="startCol" prefWidth="150.0" text="Start date:" />
                    <TableColumn fx:id="endCol" prefWidth="150.0" text="End date:" />
                    <TableColumn fx:id="globalCol" prefWidth="75.0" text="Global:" />
                    <TableColumn fx:id="userCol" prefWidth="125.0" text="User:" />
                    <TableColumn fx:id="deleteCol" prefWidth="75.0" text="Delete" />
                    <TableColumn fx:id="updateCol" prefWidth="75.0" text="Update" />
                </columns>
            </TableView>
            <Button layoutX="757.0" layoutY="45.0" mnemonicParsing="false" onMouseClicked="#createEvent" text="Create Event" />
        </AnchorPane>
    </center>
</BorderPane>
