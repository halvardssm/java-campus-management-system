<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="window" prefHeight="600.0" prefWidth="700.0"
            stylesheets="@../../style/style.css" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="nl.tudelft.oopp.group39.admin.room.RoomCreateController">
    <top>
        <HBox spacing="10" styleClass="bar">
            <padding>
                <Insets top="10" right="15" bottom="10" left="15"/>
            </padding>
            <VBox alignment="CENTER">
                <Button onAction="#toggleSidebar" id="menubtn" alignment="CENTER">
                    <graphic>
                        <ImageView fitHeight="30" fitWidth="30">
                            <Image url="@../../icons/menu-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>
            <VBox alignment="CENTER">
                <Label id="title" text="ADMIN: Create room" alignment="BOTTOM_CENTER"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS"/>
            <VBox fx:id="userBox" alignment="CENTER">
                <Button id="loginbtn" fx:id="userButton" onAction="#goToLoginScene" text="Login"/>
            </VBox>
        </HBox>
    </top>
    <bottom>
        <HBox spacing="10" styleClass="bar">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <Button id="backbtn" fx:id="backbtn" onAction="#goToAdminRoomScene" text="â—€ Back"/>
        </HBox>
    </bottom>
    <center>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <Text layoutX="14.0" layoutY="69.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Add a room" underline="true">
                <font>
                    <Font name="System Bold" size="33.0" />
                </font>
            </Text>
            <Text layoutX="27.0" layoutY="122.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Name:">
                <font>
                    <Font name="System Bold" size="17.0" />
                </font>
            </Text>
            <TextField fx:id="roomNameField" layoutX="200.0" layoutY="100.0" prefHeight="31.0" prefWidth="200.0" promptText="name" />
            <Text layoutX="16.0" layoutY="390.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Capacity:">
                <font>
                    <Font name="System Bold" size="17.0" />
                </font>
            </Text>
            <TextField fx:id="roomCapacityField" layoutX="201.0" layoutY="372.0" prefHeight="31.0" prefWidth="200.0" promptText="0" />
            <Text layoutX="17.0" layoutY="187.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Building:">
                <font>
                    <Font name="System Bold" size="17.0" />
                </font>
            </Text>
            <ComboBox fx:id="roomBuildingIdField" layoutX="200.0" layoutY="165.0" prefHeight="31.0" prefWidth="200.0" promptText="Address" />
            <Text layoutX="11.0" layoutY="341.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Only staff:">
                <font>
                    <Font name="System Bold" size="17.0" />
                </font>
            </Text>
            <ComboBox fx:id="roomOnlyStaffField" layoutX="200.0" layoutY="319.0" prefHeight="31.0" prefWidth="200.0" promptText="Only staff" />
            <Text layoutX="11.0" layoutY="247.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Description:" wrappingWidth="109.99365234375">
                <font>
                    <Font name="System Bold" size="17.0" />
                </font>
            </Text>
            <TextField fx:id="roomDescriptionField" layoutX="200.0" layoutY="225.0" prefHeight="31.0" prefWidth="200.0" promptText="description" />
            <Button layoutX="600.0" layoutY="450.0" mnemonicParsing="false" onMouseClicked="#createRoom" text="Add Room" />
            <TextArea fx:id="dateMessage" disable="true" layoutX="443.0" layoutY="104.0" prefHeight="212.0" prefWidth="417.0" />
         <MenuBar fx:id="navBar" prefHeight="35.0" prefWidth="897.0" />

        </AnchorPane>
    </center>
</BorderPane>
