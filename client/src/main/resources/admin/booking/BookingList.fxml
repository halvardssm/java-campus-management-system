<BorderPane prefHeight="600.0" prefWidth="900.0" style="-fx-padding: 4px;" stylesheets="@../../style/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.tudelft.oopp.group39.admin.booking.BookingListController">
    <top>
        <HBox spacing="10" styleClass="bar">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15"/>
            </padding>
            <Text id="title" text="Admin: Bookings View"/>
        </HBox>
    </top>
    <bottom>
        <HBox spacing="10" styleClass="bar">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15"/>
            </padding>
            <Button id="backbtn" fx:id="backbtn" onAction="#switchBack" text="â—€ Back"/>
        </HBox>
    </bottom>
    <center>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <Text layoutY="74.0" strokeType="OUTSIDE" strokeWidth="0.0" text="List of Reservations" underline="true">
                <font>
                    <Font name="System Bold" size="33.0"/>
                </font>
            </Text>
            <TableView fx:id="reservationTable" layoutY="81.0" opacity="0.75" prefHeight="418.0" prefWidth="891.0">
                <columns>
                    <TableColumn fx:id="reservationIdCol" prefWidth="106.0" text="ID"/>
                    <TableColumn fx:id="roomIdCol" prefWidth="100.0" text="Room ID"/>
                    <TableColumn fx:id="userIdCol" prefWidth="120.0" text="User ID"/>
