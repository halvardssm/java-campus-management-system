<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" xmlns:fx="http://javafx.com/fxml" fx:controller="nl.tudelft.oopp.group39.controllers.BikeSceneController">
    <top>
        <HBox fx:id="topbar" styleClass="bar" spacing="10">
            <padding><Insets top="12" right="15" bottom="8" left="15"/></padding>
            <Button onAction="#toggleSidebar" id="menubtn" alignment="CENTER">
                <graphic>
                    <ImageView fitHeight="30" fitWidth="30">
                        <Image url="@icons/menu-icon.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Label id="title" text="BIKE RENTAL" alignment="CENTER"/>
            <Region  HBox.hgrow="ALWAYS" />
            <Button fx:id="topbtn" id="loginbtn" text="Login" onAction="#goToLoginScene"/>
        </HBox>
    </top>
    <left>
        <VBox fx:id="sidebar" id="sidebar"/>
    </left>
    <center>
        <HBox alignment="CENTER" spacing="40">
            <ScrollPane fitToHeight="true" fitToWidth="true">
                <VBox spacing="20">
                    <padding>
                        <Insets top="15" left="30" bottom="15"/>
                    </padding>
                    <GridPane fx:id="buildingSelector" hgap="20" vgap="20">
                        <Label text="Select your building: " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <ComboBox id="buildingSelector" fx:id="buildinglist" GridPane.columnIndex="1"
                                  GridPane.rowIndex="0"/>
                        <Button id="getMenuBtn" text="Get bikes" GridPane.columnIndex="2" GridPane.rowIndex="0"
                                onAction="#getBikes"/>
                    </GridPane>
                    <ScrollPane fitToHeight="true" fitToWidth="true">
                        <VBox prefWidth="250" fx:id="bikelist" spacing="20">
                            <padding>
                                <Insets top="15" bottom="15"/>
                            </padding>
                        </VBox>
                    </ScrollPane>
                </VBox>
            </ScrollPane>
            <VBox prefWidth="300" spacing="10">
                <padding>
                    <Insets top="15" right="20" bottom="15" left="0"/>
                </padding>
                <Label id="carttitle" text="Your cart"/>

                <VBox fx:id="cartlist" spacing="20">
                    <Label fx:id="emptycart" id="emptycart" text="Cart is empty"/>
                </VBox>
                <VBox fx:id="timeselector" spacing="10"/>
                <Label id="errorfield" fx:id="errorfield"/>
                <Button fx:id="orderbtn" id="orderbtn" text="Place order" onAction="#placeOrder" disable="true"/>
            </VBox>
        </HBox>

    </center>
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
</BorderPane>

