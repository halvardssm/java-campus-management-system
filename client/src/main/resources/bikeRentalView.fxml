<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" xmlns:fx="http://javafx.com/fxml" fx:controller="nl.tudelft.oopp.group39.controllers.BikeSceneController">
    <top>
        <HBox fx:id="topbar" styleClass="bar" spacing="10">
            <padding><Insets top="12" right="15" bottom="8" left="15"/></padding>
            <Button onAction="#toggleSidebar" id="menubtn" alignment="CENTER">
                <graphic>
                    <ImageView fitHeight="30" fitWidth="30">
                        <Image url="@icons/menu-icon.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Label id="title" text="BIKE RENTAL" alignment="CENTER"/>
            <Region  HBox.hgrow="ALWAYS" />
            <Button fx:id="topbtn" id="loginbtn" text="Login" onAction="#goToLoginScene"/>
        </HBox>
    </top>
    <left>
        <VBox fx:id="sidebar" id="sidebar"/>
    </left>
    <center>
        <HBox spacing="20">
            <ScrollPane fitToHeight="true" fitToWidth="true">
                <VBox prefWidth="200" fx:id="buildinglist" spacing="20">
                    <padding>
                        <Insets top="15" left="30" bottom="15"/>
                    </padding>
                    <Label text="Select your building"/>
                </VBox>
            </ScrollPane>
            <ScrollPane fitToHeight="true" fitToWidth="true">
                <VBox prefWidth="250" fx:id="bikelist" spacing="20">
                    <padding>
                        <Insets top="15" bottom="15"/>
                    </padding>
                    <Button text="Get Bikes" onAction="#getBikes"/>
                </VBox>
            </ScrollPane>
            <VBox prefWidth="300" spacing="10">
                <padding>
                    <Insets top="15" right="20" bottom="15" left="0"/>
                </padding>
                <Label id="carttitle" text="Your cart"/>

                <VBox fx:id="cartlist" spacing="20">
                    <Label fx:id="emptycart" id="emptycart" text="Cart is empty"/>
                </VBox>
                <Button text="Place order" onAction="#placeOrder"/>
            </VBox>
        </HBox>

    </center>
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
</BorderPane>

