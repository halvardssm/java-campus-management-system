<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="nl.tudelft.oopp.demo.controllers.BuildingSceneController">

    <Label text=""/>
    <Label text="Get all rooms."/>
    <Button fx:id="button1" text="Submit" onAction="#getRoomsButton"/>

    <Label text="-------------------------------"/>
    <Label text="Get all room-facilities."/>
    <Button fx:id="button2" text="Submit" onAction="#getRoomFacilitiesButton"/>

    <Label text="-------------------------------"/>
    <Label text="Get all facilities."/>
    <Button fx:id="button3" text="Submit" onAction="#getFacilitiesButton"/>

    <Label text="-------------------------------"/>
    <Label text="Get all buildings."/>
    <Button fx:id="button4" text="Submit" onAction="#getBuildingsButton"/>

    <Label text="-------------------------------"/>
    <Label text="Filter Buildings"/>
    <Label text=""/>
    <Label text="Name to filter on."/>
    <TextField fx:id="nameField"/>

    <Label text="Location to filter on."/>
    <TextField fx:id="locationField"/>
    <Button fx:id="button5" text="Submit" onAction="#getFilteredBuildings"/>

    <Label text="-------------------------------"/>
    <Label text="Make a new Building."/>
    <Label text=""/>
    <Label text="Name of the building."/>
    <TextField fx:id="nameField2"/>

    <Label text="Location of the building."/>
    <TextField fx:id="locationField2"/>

    <Label text="Description of the building."/>
    <TextField fx:id="descriptionField"/>
    <Button fx:id="button6" text="Submit" onAction="#newBuildingButton"/>
    <Label text=""/>
    <Label text=""/>
</VBox>
